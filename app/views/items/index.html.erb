<h3>Items</h3>

<table class="table table-striped">
  <thead>
  <tr>
    <th>Image</th>
    <th>Name</th>
    <th>Description</th>
    <th>Newprice</th>
    <th>Oldprice</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <% @items.each do |item| %>
      <tr>
        <td><%= image_tag item.image.url(:medium) %></td>
        <td><%= item.name %></td>
        <td><%= item.description %></td>
        <td><%= item.oldprice %></td>
        <td><%= item.newprice %></td>
        <td><%= link_to 'Edit', edit_item_path(item), class: "glyphicon glyphicon-edit icon-edit" %></td>
        <td><%= link_to 'Delete', item,
                        method: :delete,
                        data: { confirm: 'Are you sure?' },
                        class: "glyphicon glyphicon-trash" %>
        </td>
      </tr>
  <% end %>

</table>

<p>
  <%= link_to new_item_path, class: "btn btn-default" do %>
      <i class="glyphicon glyphicon-plus-sign"></i> Add Item
  <% end %>
</p>