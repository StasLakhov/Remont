<h3>Items</h3>

<table class="table table-striped">
  <thead>
  <tr>
    <th>Image</th>
    <th>Name</th>
    <th>Description</th>
    <th>Newprice</th>
    <th>Oldprice</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <% @items.each do |item| %>
      <tr>
        <td><%= image_tag item.image.url(:medium) %></td>
        <td><%= item.name %></td>
        <td><%= item.description %></td>
        <td><%= item.oldprice %></td>
        <td><%= item.newprice %></td>
        <td><button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal" data-title="<%= item.name %>">Buy</button></td>
      </tr>
  <% end %>

</table>

<%= render 'modal' %>
